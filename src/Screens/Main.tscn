onready var InkRunner = get_node(\"HSplitContainer/InkRunner\")
onready var LewdShower = get_node(\"HSplitContainer/ViewPort/Portrait\")

# Called when the node enters the scene tree for the first time.
func _ready():
	pass # Replace with function body.


func _on_InkRunner_tags_received(tags: Array):
	#var tag_data := []
	
	for tag in tags:
		var components = tag.split(\": \")
		
		match components[0]:
			\"IMAGE\": show_image(components[1])
			
			\"CLEAR\": LewdShower.texture = null
			
			_: print(\"Tag not recognized: \" + components[0])
	pass

################## Tag Functions 

func show_image(image : String):
	var path_to_image : String
	
	path_to_image = \"res://Assets/images/\" + image
	
	LewdShower.texture = load(path_to_image)
	pass
